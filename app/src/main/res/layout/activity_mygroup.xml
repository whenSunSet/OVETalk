<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                style="@style/LinearLayout_match_vertical"
                tools:context="com.example.asus.my_app.activity.Mygroup">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/icon"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical">
        <TextView
            style="@style/Text_wrap_monospace_20"
            android:id="@+id/groupNick"
            android:layout_height="30dp"
            android:text="@string/groupNick"/>
        <TextView
            style="@style/Text_wrap_monospace_20"
            android:id="@+id/groupId"
            android:layout_height="30dp"
            android:text="@string/groupId"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/change"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:src="@drawable/icon_chattype_add"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            style="@style/Button_wmatch_monospace_10"
            android:id="@+id/member"
            android:text="@string/member"/>
        </LinearLayout>
    <Button
        style="@style/Button_wmatch_monospace_10"
        android:id="@+id/exit"
        android:text="@string/exit"/>
    <Button
        style="@style/Button_wmatch_monospace_10"
        android:id="@+id/destroy"
        android:text="@string/destroy"/>
</LinearLayout>
