<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        style="@style/LinearLayout_wmatch_vertical"
        android:id="@+id/send">
        <LinearLayout
            style="@style/LinearLayout_wmatch_vertical">
            <TextView
                style="@style/Text_wrap_monospace_15"
                android:id="@+id/chat_send_createDate"
                android:layout_gravity="center"
                android:text="2012-09-01 18:30:20" />
        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayout_wmatch_vertical"
            android:id="@+id/chat_background"
            android:orientation="horizontal" >
            <LinearLayout
                style="@style/LinearLayout_wmatch_vertical"
                android:id="@+id/ly_chat_icon_big"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:orientation="vertical">
                    <TextView
                        style="@style/Text_wrap_monospace_15"
                        android:id="@+id/chat_send_name"
                        android:layout_gravity="right"
                        android:text="鸿洋"/>

                    <LinearLayout
                        style="@style/LinearLayout_wmatch_vertical"
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:background="@drawable/chat_to">
                        <TextView
                            style="@style/Text_wrap_monospace_15"
                            android:id="@+id/chat_send_content"
                            android:layout_gravity="center"
                            android:text="呵呵呵呵"/>

                        <com.android.volley.toolbox.NetworkImageView
                            android:id="@+id/send_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/LinearLayout_wmatch_vertical"
                    android:id="@+id/ly_chat_icon"
                    android:layout_width="0dp"
                    android:layout_weight="2">
                    <ImageView
                        style="@style/Image_icon_60"
                        android:id="@+id/chat_send_icon"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/LinearLayout_wmatch_vertical"
        android:id="@+id/from">
        <LinearLayout
            style="@style/LinearLayout_wmatch_vertical">
            <TextView
                style="@style/Text_wrap_monospace_15"
                android:id="@+id/chat_from_createDate"
                android:layout_gravity="center"
                android:text="2012-09-01 18:30:20" />
        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayout_wmatch_vertical"
            android:id="@+id/message"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/chat_from_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="9">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        style="@style/Text_wrap_monospace_15"
                        android:id="@+id/chat_from_name"
                        android:text="小貅貅"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/chat_from"
                        android:orientation="vertical">
                        <TextView
                            style="@style/Text_wrap_monospace_15"
                            android:id="@+id/chat_from_content"
                            android:text="有大吗。。" />

                        <com.android.volley.toolbox.NetworkImageView
                            android:id="@+id/from_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"/>

                        <LinearLayout
                            style="@style/LinearLayout_wmatch_vertical"
                            android:layout_width="wrap_content"
                            android:orientation="horizontal">
                            <Button
                                android:id="@+id/agree"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/agree"
                                android:visibility="gone"/>

                            <Button
                                android:id="@+id/disagree"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/disAgree"
                                android:visibility="gone"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

