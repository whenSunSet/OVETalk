<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
                android:background="@drawable/icon"
                android:clickable="true"
    >

    <LinearLayout
        android:id="@+id/contant"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >

        <RelativeLayout
            android:id="@+id/ly_chat_bottom"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:background="@drawable/icon" >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                >

                <EditText
                    android:id="@+id/id_chat_msg"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"

                    android:background="@drawable/icon"
                    android:singleLine="true"
                    android:textSize="18sp" />
                <ImageView
                    android:id="@+id/more"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/id_chat_send"
                    android:src="@drawable/icon_chattype_add"
                    android:visibility="visible"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon"
                    android:visibility="gone"
                    android:id="@+id/id_chat_send"
                    android:text="发送" />

            </LinearLayout>



        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_btn_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:visibility="gone"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="64dp"
                    android:layout_height="64dp" >

                    <ImageView
                        android:id="@+id/btn_take_picture"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/icon"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:scaleType="fitCenter" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="录像"
                    android:textColor="#727171" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="64dp"
                    android:layout_height="64dp" >

                    <ImageView
                        android:id="@+id/btn_picture"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/icon"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:scaleType="fitCenter" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="图片"
                    android:textColor="#727171" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="64dp"
                    android:layout_height="64dp" >

                    <ImageView
                        android:id="@+id/btn_video"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_centerInParent="true"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="视频"
                    android:textColor="#727171" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_above="@id/contant"
        >
    <talk.util.PullToRefreshListView
        android:id="@+id/id_chat_listView"
        android:layout_width="fill_parent"
        android:divider="#00000000"
        android:clickable="true"
        android:layout_height="match_parent"

        android:cacheColorHint="@color/common_white"
        android:dividerHeight="0dp"
        android:scrollbarStyle="outsideOverlay" >
    </talk.util.PullToRefreshListView>

    </LinearLayout>



</RelativeLayout>